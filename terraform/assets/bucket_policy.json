{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "Allow permissions only to CloudFront through OAC",
            "Effect": "Allow",
            "Principal": {
                "Service": "cloudfront.amazonaws.com"
            },
            "Action": "s3:GetObject",
            "Resource": "${bucket_arn}/*",
            "Condition": {
                "StringEquals": {
                    "AWS:SourceArn": "${cloudfront_arn}"
                }
            }
        }
    ]
}
